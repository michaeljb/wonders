<!DOCTYPE html>
<html lang="en">
  <link rel="stylesheet" href="/bootstrap-3.3.2-dist/css/bootstrap-theme.css">
  <link rel="stylesheet" href="/bootstrap-3.3.2-dist/css/bootstrap.css">
  <script src="/jquery-2.1.3.min.js"></script>
  <script src="/bootstrap-3.3.2-dist/js/bootstrap.js"></script>

  <div class="container">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <form id="TheForm">

          <table class="table table-bordered table-hover" id="tab_logic">

            <thead>
              <tr>
                <th class="text-center">

                </th>
                <% (1..8).each do |p| %>
                  <th class="text-center">Player <%= p %></th>
                <% end %>
              </tr>
            </thead>

            <tbody>
              <tr id="<%= "boards_row" %>" class="boards">
                <td>Boards</td>
                <% (1..8).each do |p| %>
                  <td>

                    <select form="TheForm" name="board_name_p<%= p %>">
                      <option value="" disabled selected></option>

                      <% @board_names.each do |board| %>
                        <option><%= board %></option>
                      <% end %>
                    </select>

                    <input type="radio" name="board_side_p<%= p %>" class="form-control" value="A" checked="checked">A<br>
                    <input type="radio" name="board_side_p<%= p %>" class="form-control" value="B">B<br>

                  </td>
                <% end %>
              </tr>


              <% @scoring_categories.each do |category| %>
                <tr id="<%= category.split(/[ \/]/).first.downcase %>_row">
                  <td><%= category %></td>

                  <% (1..8).each do |p| %>
                    <td>
                      <input type="text" name="<%= category.split(/[ \/]/).first.downcase %>_p<%= p %>"  placeholder="0" class="form-control" />
                    </td>
                  <% end %>
                </tr>
              <% end %>

              <tr id="<%= "leaders_row" %>" class="leaders">
                <td>Leaders</td>
                <% (1..8).each do |p| %>
                  <td>
                    <input type="text" name="leaders_p<%= p %>"  placeholder="0" class="form-control" />
                  </td>
                <% end %>
              </tr>

              <tr id="<%= "city_row" %>" class="cities">
                <td>City</td>
                <% (1..8).each do |p| %>
                  <td>
                    <input type="text" name="city_p<%= p %>"  placeholder="0" class="form-control" />
                  </td>
                <% end %>
              </tr>

            </tbody>

          </table>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</html>
