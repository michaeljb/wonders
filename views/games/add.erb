<!DOCTYPE html>
<html lang="en">
  <link rel="stylesheet" href="/bootstrap-3.3.2-dist/css/bootstrap-theme.css">
  <link rel="stylesheet" href="/bootstrap-3.3.2-dist/css/bootstrap.css">
  <link rel="stylesheet" href="/bootstrap-select-1.6.3-dist/css/bootstrap-select.css">

  <script src="/jquery-2.1.3.min.js"></script>
  <script src="/bootstrap-3.3.2-dist/js/bootstrap.js"></script>
  <script src="/bootstrap-select-1.6.3-dist/js/bootstrap-select.min.js"></script>

  <script type="text/javascript">
   function changeSelect() {
     var count = parseInt($('#player_count').val(), 10);
     var i, j;

     for (i = 1; i <= count; i++) {
       $('.player' + i).show();
     }
     for (j = count + 1; j <= 8; j++) {
       $('.player' + j).hide();
     }
   }

   $(document).ready(function () {
     changeSelect()
   });
  </script>

  Players:
  <select id="player_count" onchange="changeSelect()">
    <% (1..8).each do |p| %>
      <option <%= p == @default_players ? 'selected' : ''%> ><%= p %></option>
    <% end %>
  </select>

  <div class="container">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <form id="TheForm">

          <table class="table table-bordered table-hover" id="tab_logic">

            <thead>
              <tr>
                <th class="text-center">

                </th>
                <% (1..8).each do |p| %>
                  <th class="text-center player<%= p %>">

                    <select form="TheForm" name="player<%= p %>" class="selectpicker" data-width="auto">
                      <option selected>Player <%= p %></option>

                      <% @player_names.each do |player| %>
                        <option><%= player %></option>
                      <% end %>
                    </select>

                  </th>
                <% end %>
              </tr>
            </thead>

            <tbody>
              <tr id="boards_row">
                <td>Boards</td>
                <% (1..8).each do |p| %>
                  <td class="player<%= p %>">

                    <select form="TheForm" name="board_name_p<%= p %>" class="selectpicker" data-width="auto">
                      <option value="" disabled selected />

                      <% @board_names.each do |board| %>
                        <option><%= board %></option>
                      <% end %>
                    </select>

                    <input type="radio" name="board_side_p<%= p %>" class="form-control" value="A" checked="checked">A<br>
                    <input type="radio" name="board_side_p<%= p %>" class="form-control" value="B">B<br>

                  </td>
                <% end %>
              </tr>


              <% @scoring_categories.each do |category| %>
                <tr id="<%= category.split(/[ \/]/).first.downcase %>_row">
                  <td><%= category %></td>

                  <% (1..8).each do |p| %>
                    <td class="player<%= p %>">
                      <input type="text" name="<%= category.split(/[ \/]/).first.downcase %>_p<%= p %>"  placeholder="0" class="form-control" />
                    </td>
                  <% end %>
                </tr>
              <% end %>

              <tr id="<%= "leaders_row" %>" class="leaders">
                <td>Leaders</td>
                <% (1..8).each do |p| %>
                  <td class="player<%= p %>">
                    <input type="text" name="leaders_p<%= p %>"  placeholder="0" class="form-control" />
                  </td>
                <% end %>
              </tr>

              <tr id="<%= "city_row" %>" class="cities">
                <td>City</td>
                <% (1..8).each do |p| %>
                  <td class="player<%= p %>">
                    <input type="text" name="city_p<%= p %>"  placeholder="0" class="form-control" />
                  </td>
                <% end %>
              </tr>

            </tbody>

          </table>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</html>
